<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gcc.mapper.TbWorkdayDao">

    <resultMap type="com.gcc.entity.TbWorkday" id="TbWorkdayMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="date" column="date" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TbWorkdayMap">
        select
          id, date
        from tb_workday
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TbWorkdayMap">
        select
          id, date
        from tb_workday
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="date != null">
                and date = #{date}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from tb_workday
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="date != null">
                and date = #{date}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into tb_workday(date)
        values (#{date})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into tb_workday(date)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.date})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into tb_workday(date)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.date})
        </foreach>
        on duplicate key update
        date = values(date)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update tb_workday
        <set>
            <if test="date != null">
                date = #{date},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from tb_workday where id = #{id}
    </delete>

</mapper>

