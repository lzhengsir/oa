<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gcc.mapper.TbDeptDao">

    <resultMap type="com.gcc.entity.TbDept" id="TbDeptMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="deptName" column="dept_name" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TbDeptMap">
        select
          id, dept_name
        from tb_dept
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TbDeptMap">
        select
          id, dept_name
        from tb_dept
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="deptName != null and deptName != ''">
                and dept_name = #{deptName}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from tb_dept
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="deptName != null and deptName != ''">
                and dept_name = #{deptName}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into tb_dept(dept_name)
        values (#{deptName})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into tb_dept(dept_name)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.deptName})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into tb_dept(dept_name)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.deptName})
        </foreach>
        on duplicate key update
        dept_name = values(dept_name)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update tb_dept
        <set>
            <if test="deptName != null and deptName != ''">
                dept_name = #{deptName},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from tb_dept where id = #{id}
    </delete>

</mapper>

